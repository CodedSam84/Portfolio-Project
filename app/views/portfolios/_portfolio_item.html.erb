<div class="card mb-4 mr-3 shadow-sm">
  <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <small class="text-muted"></small>
      </div>
    </div>
</div>

       