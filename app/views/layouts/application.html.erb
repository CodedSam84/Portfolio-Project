<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta name="keyword" content= "<%= @seo_keyword %>" >
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Roboto:wght@300&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <%= render "shared/flash_messages" %>
      <%= render "shared/application_nav" %>
      <div id="background"></div>
      <%= yield %>
      <%= render "shared/application_footer" %>
    </div>
  </body>
</html>
