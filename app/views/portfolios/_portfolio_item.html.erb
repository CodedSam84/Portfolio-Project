<div data-id="<%= portfolio_item.id %>" class="card mb-4 mr-3 shadow-sm">
  <%= image_tag portfolio_item.thumb_image.to_s, class: "bd-placeholder-img card-img-top", width:"100%" if !portfolio_item.thumb_image.nil? %>
  <div class="card-body">
    <p class="card-text">
      <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
      <%= portfolio_item.subtitle %>
      <%= link_to "Delete Portfolio",  portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)%>
    </p>
  </div>
</div>

       