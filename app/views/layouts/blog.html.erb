<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <meta name="keyword" content= "<%= @seo_keyword %>" >
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Lato&family=Roboto&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon/favicon-3.ico' %>
  </head>

  <body>
    <%= render "shared/blog_nav" %>
    <main role="main" class="container">
      
      <div class="row">
        <div class="col-md-8 blog-main">
          <%= render "shared/blog_main" %>
          <%= render "shared/flash_messages" %>
          <%= yield %> 
        </div>
        <%= render 'shared/blog_sidebar'%>
      </div>
    </main>
    <%= render "shared/blog_footer" %>
  </body>
</html>

