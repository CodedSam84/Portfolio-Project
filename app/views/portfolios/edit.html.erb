<h1>Edit This Portfolio Item</h1>
<%= form_for @portfolio_item do |f| %>
  <div class = "field"> 
    <%= f.label :title, 'Title' %>:
    <%= f.text_field :title %>
  </div>
  <div class = "field">
    <%= f.label :subtitle, 'Subtitle' %>:
    <%= f.text_field :subtitle %>
  </div>
  <div class = "action">
    <%= f.label :body, 'Body' %>:
    <%= f.text_area :body %><br>
  </div>
  <%= f.submit %>
<% end %>