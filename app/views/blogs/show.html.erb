<div class="blog-post">
  <h2><%= @blog.title %></h2>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <%= link_to "Home", root_path,  class: "breadcrumb-item" %>
      <%= link_to @blog.topic.title, topic_path(@blog.topic), class: "breadcrumb-item"%>
      <li class="breadcrumb-item active"><%= @blog.title %></li>
      <li class="ml-auto">
        <%= link_to fa_icon("pencil-square-o"), edit_blog_path(@blog) if logged_in?(:site_admin) %>
        <%= link_to fa_icon("trash"), blog_path(@blog), method: :delete, data: {confirm: "Are you sure you want delete this post?"} if logged_in?(:site_admin) %>
      </li>
    </ol>
  </nav>

  <p><%= markdown @blog.body %></p> 
  <%= render "comments/comment_form" %>
  <div id='blog-comment' data-blog-id='<%= @blog.id %>'>
    <%= render @blog.comments %>
  </div>
</div>