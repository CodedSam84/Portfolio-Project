<h1>Portfolio Items</h1>
<%= link_to "Create New Portfolio", new_portfolio_path %>
<% @portfolio_items.each do |portfolio| %>
    <p><%= portfolio.title %></p>
    <h2><%= link_to portfolio.subtitle, portfolio_show_path(portfolio) %></h2>
    <p><%= portfolio.body %></p>
    <%= image_tag portfolio.thumb_image if !portfolio.thumb_image.nil? %>
    <%= link_to "Edit", edit_portfolio_path(portfolio) %>
    <%= link_to 'Delete Portfolio Item', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>